{
    "name": "Offline Alert",    
    "description": "Checks if your sites are online and alerts you if not.",
    "version": "1.0",
    "manifest_version": 3,
    "author": "Uli Toll",
    "background":{
        "service_worker": "background.js"
    },
    "permissions": ["storage","alarms",
      "notifications"],        
        "host_permissions": [
            "http://*/*",
        "https://*/*"
        ],
    "action":{
        "default_popup": "index.html",
        "default_title": "Offline Alert",
        "default_icon": {
            "16": "/img/16.png",
            "32": "/img/32.png",
            "48": "/img/192.png",
            "128": "/img/192.png"
          }
    },
    "icons": {
        "16": "/img/16.png",
        "32": "/img/32.png",
        "48": "/img/192.png",
        "128": "/img/192.png"
      }   
}
